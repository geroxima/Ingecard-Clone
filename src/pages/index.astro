---
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';
import Ingecards from '../components/Ingecards.astro';
import FAQ from '../components/FAQ.astro';
import Partners from '../components/Partners.astro';
---

<Layout title="Ingecard">
	<main>
		<div class="w-full mx-auto md:w-11/12 xl:w-9/12 md:text-center mt-20 text-center">
			<h1 class="block pb-2 mb-5 text-4xl font-extrabold leading-none tracking-normal text-transparent md:text-6xl md:tracking-tight bg-clip-text bg-gradient-to-r from-[#292425] to-[#e80404]">
			  Bienvenido a Ingecard
			</h1>
			<p class="px-0 mb-10 text-lg text-gray-500 md:text-xl lg:px-24">Tu pasaporte a los mejores beneficios</p>
		</div>
		<Ingecards/>
		<Partners/>
		<CTA/>
		<FAQ/>

	</main>
</Layout>