---
import Layout from "../layouts/Layout.astro"
import ElementoLista from "../components/ElementoLista.astro";
---

<Layout title="Suscribete a Ingecard">
    <main>
        <section class="max-w-7xl px-4 pt-24 pb-12 mx-auto">
            <div class="w-full mx-auto text-left md:w-11/12 xl:w-9/12 md:text-center">
              <h1 class="block pb-2 mb-5 text-4xl font-extrabold leading-none tracking-normal text-transparent md:text-6xl md:tracking-tight bg-clip-text bg-gradient-to-r from-[#ef233c] to-[#e85d04]">
                Simple, pagos justos
              </h1>
              <p class="px-0 mb-10 text-lg text-gray-500 md:text-xl lg:px-24">Tarifa única que funciona para todos</p>
            </div>
            <!-- TARJETA DE PRECIO -->
            
            <div class="flex">
              <div class="md:w-11/12 block w-full mx-auto xl:w-4/5">
                <div class="grid grid-cols-1 gap-16 lg:grid-cols-3 sm:gap-8">
                  <div class="border-0 rounded-none shadow-none card sm:rounded-lg md:border">
                    <div class="flex flex-col justify-between p-6 border-b border-gray-200">
                      <p class="mb-1 text-lg font-semibold text-[#d90429]">Ingecard</p>
                      <p class="pb-0 my-2 font-mono text-4xl font-extrabold text-gray-900">₲ 40.000</p>
                      <p class="text-sm text-gray-500">Pago semestral</p>
                      <a href="#" class="w-full mt-6 btn btn-warning btn-lg">Página de solicitud &rarr;</a>
                    </div>
                    <ul class="flex flex-col flex-grow p-6 space-y-3">
                      <ElementoLista title="Descuentos Exclusivos"/>
                      <ElementoLista title="Ofertas Especiales"/>
                      <ElementoLista title="Afiliaciones a Clubes y Organizaciones"/>
                    </ul>
                  </div>
                </div>
              </div>

              
            </div> 
    </main>
</Layout>